<section class = "form-results">
    <div class = "cards">
        <%for(var i =0; i < books.length; i++){%>
            <div class = "card">
                <div class = "image-info">
                    <% if(books[i].imageUrl !== ""){ %> 
                        <img src = "<%= books[i].imageUrl %>">
                    <%}else{%>
                        <img src = "https://cdn.pixabay.com/photo/2017/02/01/00/26/cranium-2028555_1280.png">
                    <%}%> 
                </div>
                <div class = "text-info">
                    <div class = "info">
                        <h4 class = 'bk-title'><%= books[i].title %></h4>
                        <p class = "bk-author"><span>By: </span><%= books[i].author %></p>
                        <p class = "bk-tags"><span>Tags: </span><%= books[i].categories %></p>
                        <p class = "bk-about"><span>About: </span><%= books[i].summary %></p>
                    </div>
                    <div class = "links">
                        <a href = "<%= books[i].libraryUrl %>">Learn More</a>
                    </div>
                    
                </div>
            </div>
        <% }%>
    </div>
</section>

