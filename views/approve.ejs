<%- include('components/navbar') %>

<h3 class = "page-title">Approve A Book</h3>
<section class = "boxes">
    <% for( var i = 0; i < books.length; i++){%>
    <div class = "box">
    <div class = "top">
        <div class = "left">
            <p><strong>Title: </strong><%= books[i].title%></p>
            <p><strong>By: </strong> <%= books[i].author%></p>
            <p><strong>Image Url: </strong> <%= books[i].imageUrl%></p>
            <p><strong>Book Categories: </strong> <%= books[i].categories%></p>
            <p><strong>Library Link Url: </strong><%= books[i].libraryUrl%></p>
        </div>
        <div class = "right">
            <p><strong>Image:</strong></p>
            <img src = "<%= books[i].imageUrl%>">
        </div>
    </div>
    <div class = "middle">
        <p class = "summary"><strong>Publisher Summary: </strong><%= books[i].summary%></p>
    </div>
    <div class = "bottom">
        <div class = "left">
            <form action = "remove" method = "post">
                <input name = "toRemove" type = "hidden" value = "<%=books[i]._id%>">
                <button type = 'submit'>Remove This Book</button>
            </form>
        </div>
        <div class = "right">
            <form action = "approve" method = "post">
                <input  name = "approved" type = "hidden" value = "<%=books[i]._id%>">
                <button type = 'submit'>Approve This Book</button>
            </form>
        </div>
    </div>
    </div>
    <%}%>
</section>

<%- include('components/footer') %>